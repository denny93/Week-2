// Program to find Number of Days in a Month

import java.util.Scanner;
 class DaysInMoNth {
    private static Scanner sc;
    public static void main(String[] args) {
        int month;
        sc = new
                Scanner(System.in);

        System.out.println("Enter the month number from 1 to 12 (1 = January,2 = February,3 = " +
                "March ,4= April,5 = May ,6 = June,7 = July,8 = August,9 = September,10 = October," +
                "11 = November,12 = December) : ");
        month = sc.nextInt();
        if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12) {
            System.out.println("31 days");
        } else if (month == 4 || month == 6 || month == 9 || month == 11) {
            System.out.println("30 days");
        }
        else if (month==2)
        {
            System.out.println("28 or 29 days");
        } else
            System.out.println("Enter valid number between 1 to 12");
    }
}

